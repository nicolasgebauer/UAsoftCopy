<br>
<div style="background-color: white; padding-left: 2%; padding-right: 2%; margin-left: 30%; margin-right: 30%">

    <p style="text-align:left; color: black;">
      <font size="+3" style="font-weight: 500">Registrate</font>
    </p>

  <!--La linea siguiente funcionara solo si esta implementado devise, como vimos en webtech-->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="mb-3" style="border-width: 5px">
        <%= f.text_field :name, class: "form-control", placeholder: "Nombre/s", style: "border-color: gray; border-width: 2px" %>
      </div>

      <div class="mb-3">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Apellidos/s", style: "border-color: gray; border-width: 2px" %>
      </div>

      <div class="mb-3">
        <%= f.email_field :email, class: "form-control", placeholder: "Correo electrónico", style: "border-color: gray; border-width: 2px" %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, placeholder: "Contraseña", class: "form-control", style: "border-color: gray; border-width: 2px"  %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password_confirmation, placeholder: "Confirmar contraseña", class: "form-control", style: "border-color: gray; border-width: 2px"  %>
      </div>

      <div class="mb-3">
        <%= f.text_field :phone, class: "form-control", placeholder: "Télefono/celular", style: "border-color: gray; border-width: 2px" %>
      </div>

      <div class="actions" style="padding-left: 5%; padding-right: 5%">
        <%= f.submit "Registrarse", class:"btn btn-primary", style: "background-color: #FC83E2; border-color: #FC83E2" %>
      </div>

      <div class="actions" style="padding-left: 5%; padding-right: 5%; padding-top: 2%; padding-bottom: 10%">
        <%= link_to("Volver", new_user_session_path, class: "btn btn-primary", style: "background-color: #FC83E2; border-color: #FC83E2") %>
      </div>

      <%= image_tag("uasoft.png", width: "100%", height: "100%", background: "#FFFFFF") %>
  <% end %>
</div>

