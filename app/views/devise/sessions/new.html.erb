
<div style="background-color: white; padding-left: 2%; padding-right: 2%; margin-left: 30%; margin-right: 30%">

  <p style="text-align:left; color: black;">
    <p style="font-weight: 500; font-size 3px">Bienvenido</p>
  </p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mb-3">
      <%= f.email_field :email, class: "form-control", placeholder: "Correo electrónico", style: "border-color: gray; border-width: 2px" %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password,class: "form-control", placeholder: "Contraseña", style: "border-color: gray; border-width: 2px" %>
    </div>

    <p style="text-align:left; color: gray; padding: 5px; margin: 0; display: inline-block;">
        <span style="float:right; display: inline-block;">
          ¿Aun no tienes cuenta? pues... <%= link_to "Registrate", new_registration_path(resource_name) %>
        </span>
    </p>

    <div class="actions" style="padding-left: 5%; padding-right: 5%; padding-bottom: 10%">
      <%= f.submit "Entrar", class:"btn btn-primary", style: "background-color: #FC83E2; border-color: #FC83E2"  %>
    </div>

    <%= image_tag("uasoft.png", width: "100%", height: "100%", background: "#FFFFFF") %>
  <% end %>
</div>
